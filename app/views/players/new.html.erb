<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto text-center">
    <h1 class="text-3xl md:text-5xl font-extrabold text-gray-900">Cr√©er un joueur</h1>
  </div>

  <section class="mt-10">
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <%= simple_form_for @player do |f| %>
        <div class="bg-white rounded-2xl shadow-lg p-6 text-center flex flex-col items-center justify-between">
          <div>
            <h2 class="text-xl font-semibold text-gray-800"><%= f.input :name %></h2>
            <p class="mt-2 text-sm text-gray-500"><%= f.input :description, value: Faker::Quote.jack_handey, disabled: true %></p>
            <span class="inline-block mt-2 px-3 py-1 bg-green-100 text-green-700 text-sm font-medium rounded-full">
              Rang : <%= f.input :rank, value: "-", disabled: true %>
            </span>
          </div>
          <%= f.button :submit, class: "mt-6 w-full px-4 py-2 text-white bg-blue-600 hover:bg-blue-700 font-semibold rounded-lg transition" %>
        </div>
      <% end %>
    </div>
  </section>

</div>
