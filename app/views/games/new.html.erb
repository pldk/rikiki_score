<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto text-center">
    <h1 class="text-3xl md:text-5xl font-extrabold text-gray-900">Nouvelle partie</h1>
    <p class="mt-4 text-lg text-gray-600">Sélectionnez le type de partie pour commencer</p>
  </div>

  <!-- Lancer la partie -->
  <div class="mt-10 bg-white p-6 rounded-xl shadow-md max-w-xl mx-auto text-center">
    <%= simple_form_for @game, html: { class: "space-y-6" } do |f| %>
      <%= f.input :style, collection: Game.styles.keys, as: :radio_buttons,
                  item_wrapper_class: "inline-block mr-4",
                  label: "Style de partie" %>

      <%= f.input :stars, as: :boolean, label: "Activer les Stars (⭐)" %>

      <%= f.button :submit, "Lancer la partie",
                  class: "w-full py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition" %>
    <% end %>
  </div>
</div>
