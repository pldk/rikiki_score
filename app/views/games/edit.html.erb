<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto text-center">
    <h1 class="text-3xl md:text-5xl font-extrabold text-gray-900">Nouvelle partie</h1>
    <p class="mt-4 text-lg text-gray-600">Sélectionnez ou créez des joueurs pour commencer</p>
  </div>

  <!-- Liste des joueurs sélectionnés -->
  <div class="mt-12 max-w-xl mx-auto bg-white p-6 rounded-xl shadow-md">
    <h2 class="text-xl font-semibold text-center mb-4">Joueurs sélectionnés</h2>
    <%= render 'selected_players', game: @game %>
    <!-- Lancer la partie -->
    <div class="mt-10 bg-white p-6 rounded-xl shadow-md max-w-xl mx-auto text-center">
      <%= button_to "Commencer la partie", start_game_path(@game),
      method: :post,
      class: "mt-6 w-full bg-indigo-600 text-white py-3 rounded-xl font-semibold hover:bg-indigo-700 transition" %>
    </div>
  </div>

  <div class="mt-10 bg-white p-6 rounded-2xl shadow-md max-w-4xl mx-auto">
  <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Gérer les joueurs</h2>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Formulaire création joueur -->
    <div>
      <%= turbo_frame_tag "new_player" do %>
        <h3 class="text-lg font-semibold mb-4">Ajouter un nouveau joueur</h3>
        <%= simple_form_for Player.new, url: game_players_path(@game), method: :post, html: { class: "space-y-4" } do |f| %>
          <%= hidden_field_tag :game_id, @game.id %>
          <%= f.input :name, label: "Nom", input_html: { class: "w-full" } %>
          <%= f.input :description, as: :hidden, input_html: { value: Faker::Quote.jack_handey } %>
          <%= f.button :submit, "Créer", class: "w-full px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition" %>
        <% end %>
      <% end %>
    </div>

    <!-- Liste des joueurs -->
    <div>
      <h3 class="text-lg font-semibold mb-4">Ajouter un joueur existant</h3>
      <div class="grid gap-4 sm:grid-cols-2">
        <% (@players - @game.players).each do |player| %>
          <div class="bg-gray-50 p-4 rounded-xl shadow">
            <h4 class="font-bold text-gray-800"><%= player.name %></h4>
            <p class="text-sm text-gray-600"><%= player.description.presence || "Aucune description" %></p>
            <%= button_to "Ajouter", game_players_path(@game, player_id: player.id),
                method: :post,
                form: { data: { turbo_stream: true, turbo_frame: "selected_players" } },
                class: "mt-3 w-full bg-green-500 text-white py-1.5 rounded hover:bg-green-600" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

</div>
